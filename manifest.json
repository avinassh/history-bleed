{
  "manifest_version": 2,
  "name": "History Bleed",
  "version": "0.1",
  "author": "Avinash Sajjanshetty",
  "homepage_url": "http://avi.im/history-bleed/",
  "offline_enabled": true,
  "description": "Chrome Extension which checks all your browser history to see if any of the sites you visited affected by Cloud Bleed",
  "permissions": ["tabs", "notifications", "history", "contextMenus"],
  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon128.png"
  }
}